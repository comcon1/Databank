{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "DOI",
    "TRJ",
    "PREEQTIME",
    "TIMELEFTOUT",
    "SOFTWARE",
    "SYSTEM",
    "COMPOSITION",
    "FF",
    "AUTHORS_CONTACT",
    "ID",
    "TRAJECTORY_SIZE",
    "TRJLENGTH",
    "NUMBER_OF_ATOMS",
    "DATEOFRUNNING"
  ],
  "allOf": [
    {
      "if": { "properties": { "SOFTWARE": { "const": "gromacs" } } },
      "then": { "required": ["TPR"] }
    },
    {
      "if": { "properties": { "SOFTWARE": { "const": "NAMD" } } },
      "then": { "required": ["PSF"] }
    },
    {
      "if": { "properties": { "SOFTWARE": { "const": "openMM" } } },
      "then": {
        "anyOf": [
          { "required": ["PDB"] },
          { "required": ["PSF"] },
          { "required": ["PRMTOP"] },
          { "required": ["TOP"] }
        ]
      }
    }
  ],
  "properties": {
    "DOI": {
      "type": "string"
    },
    "TRJ": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "minItems": 1
      },
      "minItems": 1
    },
    "TPR": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "string",
          "pattern": "\\.tpr$"
        },
        "minItems": 1
      },
      "minItems": 1
    },
    "SOFTWARE": {
      "type": "string",
      "enum": ["gromacs", "openMM", "NAMD"]
    },
    "PREEQTIME": {
      "type": "number",
      "minimum": 0
    },

    "TIMELEFTOUT": {
      "type": "number",
      "minimum": 0
    },
    "TEMPERATURE": {
      "type": ["number", "null"]
    },
    "DIR_WRK": {
      "type": ["string", "null"]
    },
    "UNITEDATOM_DICT": {
      "type": ["object", "null"],
      "additionalProperties": {
        "type": ["string"]
      }
    },
    "TYPEOFSYSTEM": {
      "type": ["string", "null"]
    },
    "SYSTEM": {
      "type": "string"
    },
    "COMPOSITION": {
      "type": "object",
      "minProperties": 2,
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "NAME": { "type": "string" },
          "MAPPING": { "type": "string" },
          "COUNT": {
            "anyOf": [
              { "type": "integer", "minimum": 0 },
              {
                "type": "array",
                "items": { "type": "integer", "minimum": 0 },
                "minItems": 1
              }
            ]
          }
        },
        "required": ["NAME", "MAPPING", "COUNT"]
      }
    },
    "PUBLICATION": {
      "type": ["string", "null"]
    },
    "AUTHORS_CONTACT": {
      "type": ["string"]
    },
    "SOFTWARE_VERSION": {
      "type": ["string", "number", "null"]
    },
    "FF": {
      "type": ["string"]
    },
    "FF_SOURCE": {
      "type": ["string", "null"]
    },
    "FF_DATE": {
      "type": ["string", "number", "null"]
    },
    "CPT": {
      "type": ["array", "null"],
      "minItems": 1,
      "items": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "string",
          "pattern": "\\.cpt$"
        }
      }
    },
    "LOG": {
      "type": ["array", "null"],
      "minItems": 1,
      "items": {
        "type": "array",
        "minItems": 1,
        "items": { "type": "string" }
      }
    },
    "TOP": {
      "type": ["array", "null"],
      "minItems": 1,
      "items": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "string",
          "pattern": "\\.top$"
        }
      }
    },
    "GRO": {
      "type": ["array", "null"],
      "minItems": 1,
      "items": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "string",
          "pattern": "\\.gro$"
        }
      }
    },

    "PSF": {
      "type": ["array", "null"],
      "minItems": 1,
      "items": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "string",
          "pattern": "\\.psf$"
        }
      }
    },
    "PDB": {
      "type": ["array", "null"],
      "items": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "string",
          "pattern": "\\.pdb$"
        }
      }
    },
    "EDR": {
      "type": ["array", "null"],
      "minItems": 1,
      "items": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "string",
          "pattern": "\\.edr$"
        }
      }
    },

    "ID": {
      "type": "integer"
    },
    "TRAJECTORY_SIZE": {
      "type": "integer",
      "minimum": 0
    },
    "TRJLENGTH": {
      "type": "number",
      "minimum": 0
    },
    "NUMBER_OF_ATOMS": {
      "type": "integer",
      "minimum": 1
    },
    "DATEOFRUNNING": {
      "type": "string"
    },
    "EXPERIMENT": {
      "type": ["object", "null"],
      "properties": {
        "ORDERPARAMETER": {
          "type": "object",
          "additionalProperties": {
            "type": "array"
          }
        },
        "FORMFACTOR": {
          "type": "array"
        }
      }
    },
    "WARNINGS": {
      "additionalProperties": true,
      "type": ["null", "object", "string"]
    }
  }
}
